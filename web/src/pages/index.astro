---
import Base from '../layouts/Base.astro';

const site = (Astro.site && Astro.site.toString()) || 'https://trusted-crypto-site.vercel.app';
const title = "Trusted Crypto — Honest reviews, clear guides, and data-backed rankings";
const desc = "Trusted Crypto helps you choose with confidence. Independent reviews, transparent ratings, and simple guides across exchanges, wallets, and crypto essentials.";
const heroSrc = "/hero.jpg";

// Organization JSON-LD
const orgJsonLd = {
  "@context": "https://schema.org",
  "@type": "Organization",
  name: "Trusted Crypto",
  url: site,
  sameAs: [],
  logo: `${site.replace(/\/$/, '')}/favicon.svg`
};
---

<Base title={title} description={desc} image={heroSrc} url={site}>
  <script type="application/ld+json" set:html={JSON.stringify(orgJsonLd)}></script>

  <section class="grid md:grid-cols-2 gap-6 items-center">
    <div>
      <h1 class="text-3xl md:text-4xl lg:text-5xl font-semibold leading-tight tracking-tight">
        Make smarter crypto decisions with independent reviews & simple guides
      </h1>
      <p class="text-[#a9b4c0] mt-3">
        We cut through hype and jargon so you don’t get burned. Compare exchanges, understand fees and security, and learn with plain-English explainers.
      </p>
      <a class="inline-block bg-[#7bd389] text-[#062612] font-semibold px-4 py-3 rounded-xl mt-3" href="/best-exchanges/">
        See the best crypto exchanges →
      </a>
      <p class="text-sm text-[#a9b4c0] mt-2">Updated regularly. No pay-to-play rankings.</p>
    </div>
    <img src={heroSrc} alt="Trusted Crypto — independent reviews and guides" width="1600" height="900" loading="eager" fetchpriority="high" class="rounded-2xl"/>
  </section>

  <section class="grid md:grid-cols-3 gap-4 mt-10">
    <div class="bg-[#12161b] rounded-2xl p-5 border border-white/5">
      <h3 class="font-semibold mb-1">Independent & transparent</h3>
      <p class="text-[#a9b4c0]">Clear criteria, sources cited, and a documented review process.</p>
    </div>
    <div class="bg-[#12161b] rounded-2xl p-5 border border-white/5">
      <h3 class="font-semibold mb-1">Data-backed rankings</h3>
      <p class="text-[#a9b4c0]">We analyze fees, liquidity, trust signals, and user feedback.</p>
    </div>
    <div class="bg-[#12161b] rounded-2xl p-5 border border-white/5">
      <h3 class="font-semibold mb-1">Beginner-friendly guides</h3>
      <p class="text-[#a9b4c0]">Step-by-step explainers without the fluff or hype.</p>
    </div>
  </section>
</Base>
