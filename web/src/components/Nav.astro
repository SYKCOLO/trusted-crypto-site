---
const links = [
  { href: '/', label: 'Home' },
  { href: '/news/', label: 'News' },
  { href: '/best-exchanges/', label: 'Best Exchanges' },
  { href: '/reviews/', label: 'Reviews' },
]
const pathname = Astro.url?.pathname || '/'
const isActive = (href: string) => (href === '/' ? pathname === '/' : pathname.startsWith(href))
---
<a href="#content" class="sr-only focus:not-sr-only absolute left-2 top-2 bg-white text-black px-3 py-2 rounded">
  Skip to content
</a>

<header class="bg-transparent">
  <div class="max-w-[1160px] mx-auto flex items-center justify-between p-4">
    <a href="/" class="font-semibold tracking-tight">Trusted Crypto</a>
    <nav aria-label="Primary">
      <ul class="flex items-center gap-4 text-sm">
        {links.map((l) => (
          <li>
            <a
              href={l.href}
              class={`px-2 py-1 rounded ${isActive(l.href) ? 'text-white underline underline-offset-4' : 'text-white/80 hover:text-white'}`}
            >
              {l.label}
            </a>
          </li>
        ))}
      </ul>
    </nav>
  </div>
</header>
