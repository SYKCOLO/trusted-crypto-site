---
const { class: className = '' } = Astro.props
---
<div aria-hidden="true" class={`pointer-events-none fixed inset-0 -z-10 ${className}`}>
  <!-- Top-left warm -->
  <div class="absolute top-[2vh] left-[-8vw] h-[28rem] w-[28rem] rounded-full blur-3xl opacity-25"
       style="background: radial-gradient(50% 50% at 50% 50%, #ff8ca5 0%, rgba(255,140,165,0) 70%);"></div>

  <!-- Mid-right cool -->
  <div class="absolute top-[35vh] right-[-10vw] h-[32rem] w-[32rem] rounded-full blur-3xl opacity-25"
       style="background: radial-gradient(50% 50% at 50% 50%, #7aa2ff 0%, rgba(122,162,255,0) 70%);"></div>

  <!-- Low-left purple -->
  <div class="absolute bottom-[-6vh] left-[-6vw] h-[30rem] w-[30rem] rounded-full blur-3xl opacity-20"
       style="background: radial-gradient(50% 50% at 50% 50%, #b07aff 0%, rgba(176,122,255,0) 70%);"></div>
</div>
