---
const { class: className = '' } = Astro.props
---
<!-- Background glow for a single block: sits behind the block content -->
<div class={`pointer-events-none absolute inset-0 ${className}`} style="z-index:-1">
  <div class="absolute -top-24 -left-24 h-72 w-72 rounded-full blur-3xl opacity-30"
       style="background: radial-gradient(50% 50% at 50% 50%, #ff8ca5 0%, rgba(255,140,165,0) 70%);"></div>
  <div class="absolute -top-16 right-0 h-80 w-80 rounded-full blur-3xl opacity-30"
       style="background: radial-gradient(50% 50% at 50% 50%, #7aa2ff 0%, rgba(122,162,255,0) 70%);"></div>
  <div class="absolute bottom-0 -right-16 h-80 w-80 rounded-full blur-3xl opacity-25"
       style="background: radial-gradient(50% 50% at 50% 50%, #b07aff 0%, rgba(176,122,255,0) 70%);"></div>
</div>
