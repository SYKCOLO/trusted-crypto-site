---
const brands = ['BBC','CNN','Reuters','Bloomberg','WSJ','TIME','TechRadar']
---
<section aria-labelledby="press" class="mt-10 rounded-2xl p-6 border border-white/10 bg-white/5">
  <h2 id="press" class="text-sm opacity-70">As featured by</h2>
  <ul class="mt-3 flex flex-wrap items-center gap-x-8 gap-y-3 opacity-80">
    {brands.map((b) => (
      <li class="text-base tracking-wide">{b}</li>
    ))}
  </ul>
</section>
