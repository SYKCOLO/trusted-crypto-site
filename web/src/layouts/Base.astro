---
import SpeedInsights from '@vercel/speed-insights/astro'
import '../styles/global.css'
import Nav from '../components/Nav.astro'
import GlobalGlow from '../components/GlobalGlow.astro'

const {
  title = 'Trusted Crypto',
  description = '',
} = Astro.props
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="preconnect" href="https://cdn.sanity.io" crossorigin />
  </head>

  <body class="bg-[#0b0f14] text-white antialiased">
    <!-- Sitewide background glow -->
    <GlobalGlow />

    <!-- Header -->
    <header class="sticky top-0 z-40 backdrop-blur supports-[backdrop-filter]:bg-white/5 bg-white/0 border-b border-white/10">
      <div class="max-w-[1200px] mx-auto px-6 h-14 flex items-center justify-between">
        <a href="/" class="flex items-center h-24" aria-label="Trusted Crypto â€” Home">
          <img src="/logo.svg" alt="Trusted Crypto" class="h-full w-auto" width="75" height="75" />
        </a>
        <nav class="hidden sm:flex items-center gap-4 text-sm opacity-90">
          <a href="/best-exchanges/" class="hover:opacity-100">Exchanges</a>
          <a href="/reviews/" class="hover:opacity-100">Reviews</a>
          <a href="/guides/" class="hover:opacity-100">Guides</a>
        </nav>
      </div>
    </header>

    <!-- Site-wide comfy reading size -->
    <main class="max-w-[1200px] mx-auto p-6
                 text-[17px] md:text-[18px]
                 leading-7 md:leading-8">
      <slot />
    </main>

    {SpeedInsights && <SpeedInsights />}
  </body>
</html>
